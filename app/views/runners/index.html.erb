  </tr>

<% @runners.each do |runner| %>
  <tr>
    <td><%= runner.name %></td>
    <td><%= runner.dob %></td>
    <td><%= link_to 'Show', runner %></td>
    <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
    <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

